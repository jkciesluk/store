<%- include('./navbar_v2') %>
  <section class="h-100 gradient-custom">
    <div class="container py-5">
      <div class="row d-flex justify-content-center my-4">
        <div class="col-md-8">
          <div class="card mb-4">
            <div class="card-header py-3">
              <h5 class="mb-0">Cart - <%= products.length %> items</h5>
            </div>
            <div class="card-body">
              <% products.forEach(product=> { %>
                <!-- Single item -->
                <div class="row">
                  <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                    <!-- Image -->
                    <div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
                      <img src="/laptop_img/<%= product.Photo_Path %> " class="w-100" alt="laptop" />
                      <a href="#!">
                        <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                      </a>
                    </div>
                    <!-- Image -->
                  </div>

                  <div class="col-lg-5 col-md-6 py-5">
                    <!-- Data -->
                    <p><strong>
                        <%= product.Name %>
                      </strong></p>

                    <!-- Data -->
                  </div>

                  <div class="col-lg-4 col-md-6 position-relative">


                    <!-- Price -->
                    <p class="position-absolute bottom-0 end-0 py-5 px-5">
                      <strong>$ <%= product.Price %></strong>
                    </p>
                    <!-- Price -->
                    <a type="button" href="/basket?id=<%= product.ID %>"
                      class="btn btn-outline-danger mx-4 position-absolute bottom-0 end-0" title="Remove item"
                      style="width: 4rem">
                      <i class="fa fa-trash"></i>
                    </a>
                  </div>
                </div>

                <hr class="my-4" />

                <!-- Single item -->
                <% }) %>


                  <hr class="my-4" />

            </div>

          </div>


        </div>

        <div class="col-md-4">
          <div class="card mb-4">
            <div class="card-header py-3">
              <h5 class="mb-0">Summary</h5>
            </div>
            <div class="card-body">
              <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                  Products
                  <span> $<%= cost %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                  Shipping
                  <span>Free</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                  <div>
                    <strong>Total amount</strong>
                    <strong>
                      <p class="mb-0">(including TAX)</p>
                    </strong>
                  </div>
                  <span><strong> $<%= cost %></strong></span>
                </li>
              </ul>
              <p>Item will be sent to the address assigned to your account if you want to change it go to <a
                  href="/account">account settings.</a></p>
              <% if(products.length>0){ %>
                <a href="/basket/payment" class="btn btn-outline-success btn-lg px-5 mx-5 mt-3 " disabled>
                  Go to checkout
                </a>
                <%} else{ %>
                  <a class="btn btn-outline-success btn-lg px-5 mx-5 mt-3 " disabled>
                    Go to checkout
                  </a>
                  <%} %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>



  <main>




  </main>
  <%- include('./footer') %>