<main>
    <section class="h-100 gradient-custom">
        <div class="container py-5">
            <div class="row mx-5">
                <h3>My Account</h3>
            </div>
            <div class="row d-flex justify-content-center my-4">
                <!-- Left navbar -->
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="card-header" style="background-color: white;">
                                <h5 class="mb-2">Options</h5>
                            </div>
                            <ul class="nav nav-pills nav-fill flex-column mt-3">
                                <li class="nav-item my-1">
                                    <a class="nav-link" href="#">Profile Settings</a>
                                </li>
                                <li class="nav-item my-1">
                                    <a class="nav-link active" href="#">Change Password</a>
                                </li>
                                <li class="nav-item my-1">
                                    <a class="nav-link" href="#">My History</a>
                                </li>
                                <li class="nav-item my-1">
                                    <a class="nav-link link-danger" href="#">Delete account</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- Left navbar -->

                <div class="col-md-8">
                    <form >
                        <div class="container h-100" style="width: 50%;">
                            <div class="row justify-content-center align-items-center p-5 card shadow-2-strong card-registration" style="border-radius: 15px;">
                           
                                <div class="form-outline mb-4">
                                    <input type="password" id="oldpassword1" class="form-control" />
                                    <label class="form-label" for="oldpassword1">Old Password</label>
                                </div>
            
                                
                                <div class="form-outline mb-4">
                                    <input type="password" id="newpassword1" class="form-control" />
                                    <label class="form-label" for="newpassword1">New Password</label>
                                </div>
                                
                                <div class="form-outline mb-4">
                                    <input type="password" id="newpassword2" class="form-control" />
                                    <label class="form-label" for="newpassword2">Repeat new password</label>
                                </div>
                                <button type="button" class="btn btn-primary btn-block mb-4">Change</button>
            
                                
                            </div>
                        </div>
                    </form>
                    
                </div>
            </div>
        </div>
        </div>
    </section>
</main>
